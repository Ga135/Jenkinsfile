pipeline{
    agent any

    parameters {
        booleanParam(name: 'CHECKOUT', defaultValue: true, description: 'Toggle this value')
        booleanParam(name: 'BUILD', defaultValue: true, description: 'Toggle this value')
        booleanParam(name: 'TEST', defaultValue: true, description: 'Toggle this value')
        booleanParam(name: 'DEPLOY', defaultValue: false, description: 'Toggle this value')
    }

    stages {
        stage('MyCheckout') {
            when {
                expression {
                    params.CHECKOUT == true
                }
            }
            steps{
                checkout([$class: 'GitSCM',
                    branches: [[name: '*/master']],
                    userRemoteConfigs: [[url: 'https://github.com/Ga135/jenkins_pipeline_java_maven.git']]])
            }
        }
        

        stage('Build') {
            when {
                expression {
                    params.BUILD == true
                }
            }
            steps {

               sh mvn clean
            }
        }

        stage('Test') {
            when {
                expression {
                    params.TEST == true
                }
            }
            steps {
                sleep 5
            }
        }

        stage('Deploy') {
            when {
                expression {
                    params.DEPLOY == true
                }
            }
            steps {
                sleep 5
            }
        }
    }
}