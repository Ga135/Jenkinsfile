pipeline{
    agent any 
    stages{
        stage ('Build'){
            agent {
                label 'Slave1'
            }
            steps{
                  sh 'sleep 5'
            }
        }
    
        stage ('Test'){
            steps{
                  sh '''
                  #!/bin/bash
                  ls -lrt
                  sleep 5
                  '''
            }
        }

    }
}
